@using EduHome.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Sliders";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Slider>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sliders</h4>

                    <div class="table-responsive">
                        <a asp-action="Create" class="btn btn-primary">Create</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                              
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/assets/img/slider//@slider.Img" />

                                        </td>
                                     
                                        <td>@slider.Title</td>
                                        <td>@slider.Description</td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Detail" asp-route-id="@slider.Id"> Detail </a>

                                        </td>

                                        <td>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@slider.Id"> Update </a>
                                        </td>

                                        <td>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@slider.Id"> Delete </a>
                                        </td>
                                    </tr>

                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
